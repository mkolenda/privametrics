<%= form_for(@domain) do |f| %>
    <% for user in User.order(:email) %>
        <%= check_box_tag "domain[user_ids][]", user.id,
                          @domain.users.include?(user), {:id => "domain_user_#{user.id}"} %>
        <%= user.email %>
    <% end %>
    <%= f.submit 'Submit' %>
<% end %>
